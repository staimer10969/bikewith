<body>
  <div class="sign_in-image"></div>
    <main>
      <div class="container mt-5">

        <div class="row">
          <div class="col-md-12 mt-5 offset-md-3">
            <div class="title">
              <h3>ログイン</h3>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="form-group mt-5">
                <%= f.label :メールアドレス, class: "col-lg-3" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-3" %>
              </div>

              <div class="form-group">
                <%= f.label :パスワード, class: "col-lg-3" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-3" %>
              </div>

              <%# if devise_mapping.rememberable? %>
                <!--<div class="field">
                  <%#= f.check_box :remember_me %>
                  <%#= f.label :remember_me %>
                </div>-->
              <%# end %>
          </div>

          <div class="col-md-12 text-center">
              <div class="actions mt-5">
                <%= f.submit "ログイン", class: "btn btn-success w-25" %>
              </div>
            <% end %>

            <div class="actions-login mt-5">
              <p>
                会員登録が済みでない方は、
                <%= link_to "こちら", new_customer_registration_path %>
                から新規登録してください。
                <%#= render "public/shared/links" %>
              </p>
            </div>
            <div class="mb-5"></div>
          </div>
        </div>
      </div>
    </main>
  <div class="mb-5"></div>
  <br>
</body>
