<body>
  <main>
    <div class="container mt-5">
      <div class="title">
        <h3>ログイン</h3>
      </div>

      <div class="row">
        <div class="col-md-12 mt-3">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-group">
              <%= f.label :メールアドレス, class: "col-lg-3" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-3" %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード, class: "col-lg-3" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-3" %>
            </div>

            <%# if devise_mapping.rememberable? %>
              <!--<div class="field">
                <%#= f.check_box :remember_me %>
                <%#= f.label :remember_me %>
              </div>-->
            <%# end %>

            <div class="actions ml-3">
              <%= f.submit "ログイン", class: "btn btn-success" %>
            </div>
          <% end %>

          <div class="actions-login mt-4 ml-3">
            <p>
              会員登録が済みでない方は、
              <%= link_to "こちら", new_customer_registration_path %>
              から新規登録してください。
              <%#= render "public/shared/links" %>
            </p>
          </div>

        </div>
      </div>
    </div>
  </main>
</body>