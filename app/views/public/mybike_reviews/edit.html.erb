<body>
  <main>
    <div class="container mt-5">
      <div class="title">
        <h3>Myバイク編集</h3>
      </div>

      <div class="row">
        <div class="col-md-12 mt-5">
          <%= form_with model: @review, url:mybike_review_path, local:true do |f| %>

            <table class="table table-borderless">
              <tbody class="mt-1">
                <tr>
                  <th width="20%"><%= f.label :車種選択 %></th>
                  <td><%= f.collection_select :item_id, Item.all, :id, :model, prompt: "選択してください" %></td>
              	</tr>

              	<tr>
                  <th><%= f.label :購入動機 %></th>
                  <td><%= f.text_area :motive, size:"29*70" %></td>
                </tr>

                <tr>
                  <th><%= f.label :長所 %></th>
                  <td><%= f.text_area :merit, size:"29*70" %></td>
                </tr>

                <tr>
                  <th><%= f.label :短所 %></th>
                  <td><%= f.text_area :demerit, size:"29*70" %></td>
                </tr>

                <tr>
                  <th><%= f.label :これから買う方へ %></th>
                  <td><%= f.text_area :advice, size:"29*70" %></td>
                </tr>

                <tr>
                  <th><%= f.label :点数評価 %></th>
                  <td><%= f.text_area :score, size:"29*70" %></td>
                </tr>

                <tr>
                  <th>タグ(,で区切ると複数タグ登録できます)</th>
                  <td><%= f.text_area :name, value: @tag_list, size:"29*70" %></td>
                </tr>

              </tbody>
            </table>



            <div class="text-center mt-5">
              <%= f.submit "変更を保存", class: "btn btn-success w-25" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </main>
</body>