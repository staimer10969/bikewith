<main class="sign_up-image">
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-12 mt-5 offset-md-3">
        <div class="title">
          <h3>新規登録</h3>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="form-group mt-5">
            <%= f.label :ニックネーム, class: "col-lg-3" %>
            <%= f.text_field :name, class: "col-xs-3" %>
          </div>

          <div class="form-group">
            <%= f.label :メールアドレス, class: "col-lg-3" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-3" %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード（６文字以上）, class: "col-lg-3" %>
            <% if @minimum_password_length %>
            <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "col-xs-3" %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード（確認用）, class: "col-lg-3" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-xs-3" %>
          </div>
        </div>

        <div class="col-md-12 text-center">
            <div class="actions mt-5">
              <%= f.submit "登録", class: "btn btn-success w-25" %>
            </div>
          <% end %>

          <div class="actions-login mt-5">
            <p>
              既に登録済みの方は
              <%= link_to "こちら", new_customer_session_path %>
              からログインしてください。
              <%#= render "public/shared/links" %>
            </p>
          </div>
        </div>
    </div>
  </div>
</main>
