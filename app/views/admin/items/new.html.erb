<body>
  <main>
      <div class="container mt-5">
        <div class="title">
          <h3>バイク新規登録</h3>
        </div>

        <div class="row">
          <div class="col-md-12 offset-md-3 mt-5">
             <%= form_with model: @item, url:admin_items_path, local:true do |f| %>

              <table class="table table-borderless">
                <tbody class="mt-1">
                  <tr>
                    <th width="30%"><%= f.label :バイク画像 %></th>
                    <td><%= f.file_field:image, accept:"image/*" %></td>
                  </tr>

                  <tr>
                    <th><%= f.label :車種 %></th>
                    <td><%= f.text_field :model, size:"30*5" %></td>
                  </tr>

                  <tr>
                    <th><%= f.label :メーカー %></th>
                    <td><%= f.text_field :brand, size:"30*5" %></td>
                  </tr>

                  <tr>
                    <th><%= f.label :年式 %></th>
                    <td><%= f.text_field :model_year, size:"30*5" %></td>
                  </tr>

                  <tr>
                    <th><%= f.label :排気量 %></th>
                    <td><%= f.text_field :engine, size:"30*5" %> cc</td>
                  </tr>

                  <tr>
                    <th><%= f.label :価格 %></th>
                    <td><%= f.text_field :price, size:"30*5" %> 円</td>
                  </tr>

                  <tr>
              			<th><%= f.label :ジャンル %></th>
              			<td><%= f.collection_select :genre_id, Genre.all, :id, :genre_name, prompt: "選択してください" %></td>
              		</tr>
              	</tbody>
              </table>
          </div>

          <div class="col-md-12 text-center mt-5 ml-2">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
            <% end %>
        </div>
      </div>
    <br>
    <br>
  </main>
</body>