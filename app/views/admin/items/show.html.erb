<h1>バイク詳細</h1>

<div class="item-image">
  <%= image_tag @item.get_image, size: "400x300" %>
</div>

<table class="admin-item-table", width="100%">
  <tr>
    <th width="20%">車種</th>
    <td><%= @item.model %></td>
  </tr>

  <tr>
    <th width="20%">メーカー</th>
    <td><%= @item.brand %></td>
  </tr>

  <tr>
    <th width="20%">年式</th>
    <td><%= @item.model_year %></td>
  </tr>

  <tr>
    <th width="20%">排気量</th>
    <td><%= @item.engine %></td>
  </tr>

  <tr>
    <th width="30%">税込価格<br>（税抜価格）</th>
    <td><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= (@item.price).floor.to_s(:delimited) %>)円</td>
  </tr>
</table>