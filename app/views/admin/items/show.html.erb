<body>
  <main>
    <div class="container mt-5">
      <div class="title">
        <h3>バイク詳細</h3>
      </div>

      <div class="row">
        <div class="col-md-6 mt-5">
          <%= image_tag @item.get_image, size: "400x400" %>
        </div>

        <div class="col-md-6 mt-5">
          <h5 class="ml-2">スペック</h5>
            <table class="table mt-3">
              <tr>
                <th width="40%">車種</th>
                <td><%= @item.model %></td>
              </tr>

              <tr>
                <th>メーカー</th>
                <td><%= @item.brand %></td>
              </tr>

              <tr>
                <th width="20%">年式</th>
                <td><%= @item.model_year %></td>
              </tr>

              <tr>
                <th>排気量</th>
                <td><%= @item.engine %></td>
              </tr>

              <tr>
                <th>価格</th>
                <td><%= @item.price %></td>
              </tr>

              <tr>
                <th>ジャンル</th>
                <td><%= @item.genre.genre_name %></td>
              </tr>
            </table>
        </div>

          <div class="col-md-12 text-center mt-5">
            <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %>
          </div>

      </div>
    </div>
  </main>
</body>