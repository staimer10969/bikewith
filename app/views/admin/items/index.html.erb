<body>
 <main>
  <div class="container mt-5">
   <div class="title">
    <h3>バイク一覧</h3>
   </div>

   <div class="row">
    <div class="col-md-11">
      <% @items.each do |item| %>
       <div class="mt-5">
        <%= link_to admin_item_path(item.id) do %>
         <%= image_tag item.get_image, fallback: 'no_image.jpg', size: "200x150" %>
        <% end %>
         <p><%= item.model %></p>
         <p><%= (item.price).to_s(:delimited) %></p>
       <% end %>
       </div>
     <%= link_to "新規登録", new_admin_item_path, class:"btn btn-success" %>
    </div>
   </div>
  </div>
 </main>
</body>