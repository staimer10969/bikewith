<body>
  <main>
     <div class="container mt-5">
      <div class="title">
       <h3>バイク一覧</h3>
      </div>

        <div class="row">
           <% @items.each do |item| %>
            <div class="items mt-3 mr-2 ml-2 col-ms-4">
             <%= link_to admin_item_path(item.id) do %>
              <%= image_tag item.get_image, fallback: 'no_image.jpg', size: "200x150" %>
             <% end %>
              <p><%= item.model %></p>
              <p><%= (item.price).to_s(:delimited) %></p>
            </div>
           <% end %>
         </div>

         <div class="col-md-12">
           <div class="action text-center">
            <%= link_to "新規登録", new_admin_item_path, class:"btn btn-success" %>
           </div>
         </div>
      </div>
      <br>
      <br>
  </main>
</body>