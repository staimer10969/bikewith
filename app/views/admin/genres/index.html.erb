<body>
	<main>
		<div class="container mt-5">
			<div class="title">
				<h3>ジャンル一覧、追加</h3>
			</div>

			<div class="row">
				<div class="col-md-11 mt-5 ml-5">

						<div class="text-center">
					  	<%= render 'form', genre: @genre, url: admin_genres_path, submit: '新規登録' %>
						</div>

							<table class="table mt-5">
									<tbody>
										<% @genres.each do |genre| %>
											<tr>
												<td><%= genre.genre_name %></td>
												<td class="text-right"><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-success w-25" %></td>
											</tr>
										<% end %>
									</tbody>
							</table>


				</div>
			</div>
		</div>
	</main>
</body>