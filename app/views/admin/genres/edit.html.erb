<body>
  <main>
    <div class="container mt-5">
      <div class="title">
        <h3>ジャンル編集</h3>
      </div>

      <div class="row">
        <div class="col-md-11 mt-5">
           <%= form_with model: @genre, url:admin_genre_path, local:true do |f| %>
            <div class="text-center">
              <table class="table table-borderless">
                <td><%= f.label :genre_name,"ジャンル名：" %></td>
                <td><%= f.text_field :genre_name %></td>
                <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</body>